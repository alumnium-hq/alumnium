{
  "mcpServers": {
    "alumnium": {
      "type": "stdio",
      "trust": true,
      "command": "make",
      "args": ["-C", "..", "start-mcp"],
      "env": {
        "AZURE_OPENAI_API_KEY": "${AZURE_OPENAI_API_KEY}",
        "AZURE_OPENAI_API_VERSION": "${AZURE_OPENAI_API_VERSION}",
        "AZURE_OPENAI_ENDPOINT": "${AZURE_OPENAI_ENDPOINT}",
        "ALUMNIUM_DRIVER": "${ALUMNIUM_DRIVER}",
        "ALUMNIUM_MODEL": "${ALUMNIUM_MODEL}",
        "ALUMNIUM_PLAYWRIGHT_HEADLESS": "${ALUMNIUM_PLAYWRIGHT_HEADLESS}",
        "ALUMNIUM_PLAYWRIGHT_NEW_TAB_TIMEOUT": "2000",
        "LT_USERNAME": "${LT_USERNAME}",
        "LT_ACCESS_KEY": "${LT_ACCESS_KEY}"
      }
    }
  }
}
