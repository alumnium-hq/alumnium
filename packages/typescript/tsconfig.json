{
  "compilerOptions": {
    "target": "ES2020",
    "module": "Node16",
    "lib": ["ES2020"],
    "declaration": true,
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "resolveJsonModule": true,
    "moduleResolution": "node16",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "allowJs": true,
    "typeRoots": [
      "./node_modules/@types",
      "./node_modules/@wdio/globals/types",
      "./src/types"
    ]
  },
  "ts-node": {
    "esm": true,
    "experimentalSpecifierResolution": "node"
  },
  "include": [
    "examples/**/*",
    "src/**/*",
    "playwright.config.ts",
    "wdio.conf.ts"
  ],
  "exclude": [
    "dist",
    "node_modules"
  ]
}
